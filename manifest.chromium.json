{
    "manifest_version": 3,
    "permissions": [
        "declarativeNetRequest",
        "scripting",
        "activeTab"
    ],
    "host_permissions": [
        "*://*.ecole-directe.plus/*",
        "*://*.ecoledirecte.com/*"
    ],
    "background": {
        "service_worker": "index.chromium.js"
    },
    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "change_origin",
                "enabled": true,
                "path": "rulesets/change_origin.json"
            }
        ]
    },
    "action": {
        "default_title": "Ecole Directe Plus â€¢ Unblock",
        "default_popup": "popup/popup.html"
    }
}
{
  "manifest_version": 2,
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "activeTab",
    "*://*.ecole-directe.plus/*",
    "*://*.ecoledirecte.com/*",
    "*://api.ecoledirecte.com/mot-de-passe-oublie"
  ],
  "background": {
    "scripts": ["index.firefox.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://api.ecoledirecte.com/mot-de-passe-oublie.awp"],
      "css": ["reset_password.css"],
      "js": ["reset_password.js"]
    }
  ],
  "browser_action": {
    "default_title": "Ecole Directe Plus â€¢ Unblock",
    "default_popup": "popup/popup.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "edp-unblock-firefox@ecole-directe.plus"
    }
  }
}
